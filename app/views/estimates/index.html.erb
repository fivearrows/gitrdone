<h1>Listing estimates</h1>

<table>
  <tr>
    <th>Task</th>
    <th>Phase</th>
    <th>Estimate unit</th>
    <th>Qty</th>
  </tr>

<% @estimates.each do |estimate| %>
  <tr>
    <td><%=h estimate.task_id %></td>
    <td><%=h estimate.phase_id %></td>
    <td><%=h estimate.estimate_unit_id %></td>
    <td><%=h estimate.qty %></td>
    <td><%= link_to 'Show', estimate %></td>
    <td><%= link_to 'Edit', edit_estimate_path(estimate) %></td>
    <td><%= link_to 'Destroy', estimate, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New estimate', new_estimate_path %>